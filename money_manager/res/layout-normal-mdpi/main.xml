 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.astuetz.viewpager.extensions.example"
     android:id="@+id/scrollView1"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" >

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="3"
    android:layout_gravity="center"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_column="0"
        android:layout_row="1"
        android:text=" "
        android:background="@drawable/inbox"
        android:onClick="SendRequest_inbox_OnClick" 
        android:requiresFadingEdge="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_column="0"
        android:layout_row="2"
        android:text=" "
        android:background="@drawable/settings"
        android:onClick="SendRequest_settings_OnClick" 
        android:requiresFadingEdge="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/> 
        
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_column="1"
        android:layout_row="2"
        android:text=" "
        android:background="@drawable/about"
        android:onClick="AboutMe" 
        android:requiresFadingEdge="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/> 
        
</GridLayout>
</ScrollView>